{
    "appenders": {
        "access": {
            "type": "file",
            "filename": "log/access.log",
            "pattern": "-yyyy-MM-dd",
            "category": "http"
        },
        "info": {
            "type": "file",
            "filename": "log/info.log",
            "level": "INFO",
            "maxLogSize": 10485760,
            "category": "info",
            "numBackups": 3
        },
        "error": {
            "type": "file",
            "level": "ERROR",
            "filename": "log/access.log",
            "category": "error"
        }
    },
    "categories": {
        "default": { "appenders": ["access"], "level": "DEBUG" },
        "info": { "appenders": ["info"], "level": "DEBUG" },
        "error": { "appenders": ["error"], "level": "ERROR" }
    }
}