#!/usr/bin/env node

const fs = require('fs')

const http = require('http');

const log4js = require('log4js');
const modelos = require('../modelos');
const app = require('../../app');
const logConfig = require('../config/log4js.json');


log4js.configure(logConfig);

const log = log4js.getLogger("bootstrap");

try {
    fs.mkdirSync('../log');
} catch (e) {
    if (e.code != 'EEXIST') {
        log.error("No se encontro el archivo de log: ", e);
        process.exit(1);
    }
}

//crear la variable de port
const port = normalizePort(process.env.PORT || '3000');
app.set('port', port);

var server = http.createServer(app);

modelos.sequelize.sync().then(function() {

    server.listen(port, function() {
        log.info('Servidor Access Control PH Corriendo en el puerto: ' + server.address().port);
    });
    server.on('error', onError);
    server.on('listening', onListening);
});

function normalizePort(val) {
    var port = parseInt(val, 10);

    if (isNaN(port)) return val;

    if (port >= 0) return port;

    return false;
}

function onError(error) {
    if (error.syscall !== 'listen') {
        throw error;
    }

    var bind = typeof port === 'string' ?
        'Pipe ' + port :
        'Port ' + port;

    switch (error.code) {
        case 'EACCES':
            log.error(bind + ' se requieren privilegios');
            process.exit(1);
            break;
        case 'EADDRINUSE':
            log.error(bind + ' ya esta en uso');
            process.exit(1);
            break;
        default:
            throw error;
    }
}

function onListening() {
    var addr = server.address();
    var bind = typeof addr === 'string' ?
        'pipe ' + addr :
        'port ' + addr.port;
    log.info('Listening on ' + bind);
}