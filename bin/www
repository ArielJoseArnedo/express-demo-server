#!/usr/bin/env node

var app = require('../app');
var debug = require('debug')('ph_man_server');
var http = require('http');
var log4js = require('log4js');
var models = require('../modelos');

log4js.configure('./config/log4js.json');

var log = log4js.getLogger("Inicio");

try {
    require('fs').mkdirSync('./log');
  } catch (e) {
    if (e.code != 'EEXIST') {
      log.error("No se encontro el archivo de log: ", e);
      process.exit(1);
    }
  }

//crear la variable de port
var port = normalizePort(process.env.PORT || '3000');
app.set('port', port);

log.info("Creando el servidor");
var server = http.createServer(app);

models.sequelize.sync().then(function () {

    server.listen(port, function () {
        log.info('Servidor Access Control PH Corriendo en el puerto: ' + server.address().port);
    });
    server.on('error', onError);
    server.on('listening', onListening);
});

function normalizePort(val) {
    var port = parseInt(val, 10);

    if (isNaN(port)) return val;

    if (port >= 0) return port;

    return false;
}

function onError(error) {
    if (error.syscall !== 'listen') {
        throw error;
    }

    var bind = typeof port === 'string' ?
        'Pipe ' + port :
        'Port ' + port;

    switch (error.code) {
        case 'EACCES':
            console.error(bind + ' se requieren privilegios');
            process.exit(1);
            break;
        case 'EADDRINUSE':
            console.error(bind + ' ya esta en uso');
            process.exit(1);
            break;
        default:
            throw error;
    }
}

function onListening() {
    var addr = server.address();
    var bind = typeof addr === 'string' ?
        'pipe ' + addr :
        'port ' + addr.port;
    debug('Listening on ' + bind);
}